.section--00
  background #47494e

.section--01
  padding 100px 0
  .intro-wrap
    margin-bottom: 120px
  .compare-wrap
    width 100%
    padding-top: 10vh
    .hardware-aligner

      $xsmax_w = 29.4%
      $xs_w = 27%

      .iphonexs-models
        position: relative
        .scaling-hardware
          margin 0 auto
          width ($xsmax_w + 1%)
          position: relative
          z-index 1
        .sliding-hardware
          position: absolute
          top 0
          left 0
          right 0
          bottom 0
          .hardware-iphonexsmax
            position: absolute
            bottom 0
            left 15px
            z-index 1
            width $xsmax_w
          .hardware-iphonexs
            position: absolute
            bottom 0
            right 15px
            z-index 2
            width $xs_w

