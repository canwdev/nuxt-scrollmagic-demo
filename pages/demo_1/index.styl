.page-index
  //overflow-x hidden

  .section-row
    padding 50px 10px
    box-sizing border-box
    line-height: 1.5
    position: relative


    &.section--hero
      visibility visible

    .track-photo
      position: absolute
      top calc((100% - 598px) / 2)
      right 40%
      width 486px
      height 598px
      transform-style preserve-3d
      color: $colorWhite
      //transform rotateX(-15deg) rotateY(-45deg)
      @media screen and (max-width: $pcmin_width)
        top calc((100% - 369px) / 2)
        width 300px
        height 369px
      @media screen and (max-width: $mobile_width)
        right calc((100% - 300px) / 2)

      .layer
        position: absolute
        top 0
        left 0
        width 100%
        height 100%
        font-size 300px
        display flex
        align-items center
        justify-content center
        opacity 0.9
        transform rotateY(-45deg)
        transform-style preserve-3d
        will-change transform

        &:nth-child(1)
          background #f44336

        &:nth-child(2)
          background #4caf50

        //transform scale(0.8)

        &:nth-child(3)
          background #ffeb3b

    //transform scale(0.5)

    //transform scale(0.5)

    &.section--01
      position: relative
      z-index 1
      overflow-x hidden

      .block
        position: absolute
        width 50px
        height 50px
        background magenta
        box-shadow 0 3px 10px rgba(0, 0, 0, .23)

      .block1
        top 40%
        left 0
        background #ff80ab

      .block2
        top 50%
        right 0
        background #1de9b6

    &.section--03
      padding 0
      .sticky
        position sticky
        top 0
        z-index 0
        height 100vh
        $green = #4caf50
        $blue = #2196f3
        .box
          position: absolute
          top calc((100% - 500px) / 2)
          right 10%
          &.box2
            z-index 2
            right 4%
            top calc((100% - 200px) / 2 + 20%)

      .content
        color: $colorWhite
        position relative
        z-index 1
        margin-top  50vh
        height 100vh
        display flex
        align-items center
        background linear-gradient(to top, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
